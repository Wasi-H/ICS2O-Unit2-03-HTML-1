name: Jekyll site CI

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Build the site in the jekyll/builder container
      run: |
        docker run \
        -v ${{ github.workspace }}:/srv/jekyll -v ${{ github.workspace }}/_site:/srv/jekyll/_site \
        jekyll/builder:latest /bin/bash -c "chmod 777 /srv/jekyll && jekyll build --future"
        
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="My first webpage, with image">
    <meta name="keywords" content="MTHS, website">
    <meta name="author" content="Wasi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My first webpage, with image</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <script src="script.js"></script>
    <h1 style="color:red;">Hello World</h1>
    <p style="color:purple;">Hello World</p>
    <a href="www.mths.ca">School Website</a>
    <br>
    <img scr= "https://i.imgur.com/n6YeSTO.jpg" alt="MTHS Outside View">
  </body>
</html> 
